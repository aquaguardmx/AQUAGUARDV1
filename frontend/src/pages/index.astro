		<script>
			document.addEventListener("DOMContentLoaded", function () {
				// Mobile menu toggle (usa una clase para controlar la visibilidad)
				const menuToggle = document.querySelector(
					".mobile_menu_button",
				);
				const mainMenu = document.querySelector(".main_menu");
				if (menuToggle && mainMenu) {
					menuToggle.addEventListener("click", function () {
						mainMenu.classList.toggle("open");
					});
				}

				// Header scroll effect (verifica que exista el header)
				const header = document.querySelector("header");
				function updateHeaderTransparency() {
					if (!header) return;
					if (window.scrollY <= 10) {
						header.classList.add("transparent");
					} else {
						header.classList.remove("transparent");
					}
				}
				window.addEventListener("scroll", updateHeaderTransparency);
				updateHeaderTransparency(); // Ejecuta al cargar la página
			});
		</script>
		<!-- Requiere CSS: .main_menu.open { display: flex; } o el comportamiento que prefieras -->
